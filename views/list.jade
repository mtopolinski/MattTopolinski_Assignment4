extends layout

block content
    body
        .navbar.navbar-default.navbar-fixed-top
            .container
                .navbar-header
                    a.navbar-brand Site Navigation
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                #navbar-main.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/login/') Login Page
                        li
                            a(href='/listEdit/') List Editor
    .row.page-header
        .col-lg-12
            h1 Assignment 4 List Page
            h3 Please refer to the following list of notes:
    .row
        .col-xs-12.col-md-6
        p

            ul
                for listObject in notes
                    li= 'User ID: '+listObject._id
                    li= 'Username: '+listObject.Username
                    li= 'Password: '+listObject.Password
                    li= 'Title: '+listObject.Notes.Title
                    li= 'Contents: '+listObject.Notes.Contents
                    a(href='/test/users/'+listObject._id+'/notes/'+listObject.Notes.Title): button.btn.btn-default.pull-left(type="button") Edit this Note
                else
                    li no objects





    .row
        .col-xs-12.col-md-6
            .form-group
                | <br /><br />
                | <br /><br />
            a(href='/listEdit'): button.btn.btn-default.pull-left(type="button") Add a New Note
        .col-xs-12.col-md-4
            | <br /><br />